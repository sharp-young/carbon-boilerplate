{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "quotes": [
      1,
      "single"
    ],
    "linebreak-style": 0,
    "class-methods-use-this": 0,
    "max-len": [
      2,
      130,
      4
    ],
    "no-plusplus": 0,
    "no-underscore-dangle": [
      2,
      {
        "allowAfterThis": true,
        "allowAfterSuper": true
      }
    ]
  }
}